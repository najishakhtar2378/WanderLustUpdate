<% layout("layouts/boilerplate") %>
<style>
  /* PROFILE PAGE */
.container{
  background-color: #f0ffff;
}


.profile-card {
  background: hsl(0, 65%, 44%);
  background-color: rgb(127, 255, 142);
  border-radius: 16px;
  padding: 30px 25px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.profile-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
}

/* Profile Image */
.profile-img-wrapper {
  width: 120px;
  height: 120px;
  margin: auto;
  border-radius: 50%;
  overflow: hidden;
  border: 4px solid #fe424d; /* Airbnb Red */
}

.profile-img-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Username */
.profile-card h4 {
  font-weight: 600;
  margin-top: 15px;
}

/* Email */
.profile-card p {
  font-size: 0.95rem;
}

/* Member Since */
.member-since {
  font-size: 0.9rem;
  color: #555;
}

.member-since span {
  color: #000;
  font-weight: 500;
}
</style>
<body class="container">
<div class="container profile-container">
  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6">

      <div class="profile-card text-center">

        <!-- Profile Image -->
        <div class="profile-img-wrapper">
          <img 
            src="<%= currUser.profileImage?.url || '/images/default-user.png' %>"
            alt="profile"
          >
        </div>

        <!-- Username -->
        <h4 class="mt-3"><%= currUser.username %></h4>

        <!-- Email -->
        <p class="text-muted"><%= currUser.email %></p>

        <hr>

        <!-- Account Created -->
        <p class="member-since">
          <strong>Member Since:</strong><br>
          <span>
            <%= currUser.createdAt 
              ? currUser.createdAt.toDateString() 
              : "N/A" 
            %>
          </span>
        </p>
      </div>
    </div>
  </div>
</div>
</body>